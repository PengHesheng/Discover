<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f0f7f5"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_all_route_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2018年08月12日"
            android:layout_marginLeft="18dp"
            android:textColor="#212121"
            android:textSize="15sp"
            android:layout_marginStart="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="53dp"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="#212121"
            android:text="@string/tv_all_route_nervous"
            android:layout_marginEnd="53dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_all_route_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="08:30-23:30"
        android:layout_marginLeft="18dp"
        android:textColor="#aaaaaa"
        android:textSize="13sp"
        android:layout_marginStart="18dp" />

    <ImageView
        android:id="@+id/img_all_route_nervous"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="217dp"
        tools:src="@drawable/nervous0"
        android:layout_marginStart="217dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@mipmap/red_point" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/tv_all_route_sum_path"
                android:textColor="#6c6c6c"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_all_route_sum_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="162dp"
                android:layout_marginStart="162dp"
                android:textColor="#6c6c6c"
                android:textSize="15sp"
                tools:text="2公里" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="17dp"
                android:src="@mipmap/green_point"
                android:layout_marginStart="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_all_route_sum_time"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"
                android:textColor="#6c6c6c"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tv_all_route_sum_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3.5小时"
                android:layout_marginLeft="162dp"
                android:textColor="#6c6c6c"
                android:textSize="15sp"
                android:layout_marginStart="162dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:src="@mipmap/yellow_point" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/tv_all_route_sum_pay"
                android:textColor="#6c6c6c"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_all_route_sum_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="162dp"
                android:layout_marginStart="162dp"
                android:textColor="#6c6c6c"
                android:textSize="15sp"
                tools:text="500元" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/all_route_recycler_view"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floating_btn_all_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            tools:ignore="RtlHardcoded" />
    </FrameLayout>

</LinearLayout>