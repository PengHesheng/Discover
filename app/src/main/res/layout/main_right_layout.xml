<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@mipmap/main_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_menu_icon"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/menu_icon"
        android:layout_marginStart="12dp" />

    <ImageButton
        android:id="@+id/img_btn_route_plan"
        android:layout_width="163dp"
        android:layout_height="163dp"
        android:layout_marginTop="89dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:background="@mipmap/main_route_plan_unchecked"
        android:layout_marginEnd="50dp"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/img_btn_shark"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="180dp"
        android:background="@mipmap/main_shark_unchecked"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:id="@+id/img_btn_around"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="160dp"
        android:background="@mipmap/main_around_unchecked"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp" />

</RelativeLayout>