<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:id="@+id/layout_change_info"
    android:background="#f4f4f4"
    android:orientation="vertical"
    android:focusable="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_toolbar_left"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/left_back"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#414141"
                tools:text="旅游小知识"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/img_toolbar_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:textSize="21sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="OK"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layout_change_info_portrait"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_portrait"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/img_change_info_portrait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="90dp"
            android:layout_centerVertical="true"
            tools:src="@mipmap/ic_launcher_round"
            android:layout_marginStart="90dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginRight="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/next"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/tv_change_info_name"
            android:textColor="#414141"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_change_info_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingLeft="36dp"
            android:paddingStart="36dp"
            android:singleLine="true"
            android:textColor="#414141"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry"
            tools:text="PHS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="3dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_change_info_sex"
            android:layout_marginLeft="16dp"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_change_info_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="36dp"
            android:paddingStart="36dp"
            android:textSize="18sp"
            android:textColor="#414141"
            android:gravity="center_vertical"
            tools:ignore="RtlSymmetry"
            tools:text="女"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_change_info_city"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="3dp"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_change_info_city_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_change_info_city"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:textColor="#414141"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_change_info_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_change_info_city_hint"
            android:layout_toLeftOf="@+id/img_change_info_city_next"
            android:gravity="center_vertical"
            android:paddingLeft="36dp"
            android:textSize="18sp"
            android:textColor="#414141"
            android:text="重庆"
            android:layout_toEndOf="@+id/tv_change_info_city_hint"
            android:paddingStart="36dp"
            android:layout_toStartOf="@+id/img_change_info_city_next"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/img_change_info_city_next"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/next"
            android:layout_marginEnd="18dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/tv_change_info_signed"
            android:textColor="#414141"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt_change_info_signed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingLeft="36dp"
            android:paddingStart="36dp"
            android:textColor="#414141"
            android:maxEms="15"
            android:ellipsize="end"
            android:textSize="18sp"
            android:singleLine="true"
            tools:ignore="RtlSymmetry"
            tools:text="你从哪里来，要到哪里去，将要去sdf干什么jkhk" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/tv_change_info_email"
            android:textColor="#414141"
            android:textSize="18sp" />

        <AutoCompleteTextView
            android:id="@+id/auto_tv_change_info_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingLeft="36dp"
            android:inputType="textEmailAddress"
            android:paddingStart="36dp"
            android:textColor="#414141"
            android:singleLine="true"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry"
            tools:text="1451238152@qq.com" />
    </LinearLayout>

</LinearLayout>