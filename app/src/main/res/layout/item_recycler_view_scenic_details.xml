<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#f9fefe"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_details_scenic_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:textColor="#545555"
            android:textSize="18sp"
            tools:ignore="RtlSymmetry"
            tools:text="胖哥俩肉蟹煲(南坪万达新馆店)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="7dp"
                android:layout_marginStart="10dp"
                android:src="@mipmap/popularity" />

            <TextView
                android:id="@+id/tv_scenic_details_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8b8d8d"
                android:textSize="12sp"
                tools:text="人气80" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:src="@mipmap/money_detail" />

            <TextView
                android:id="@+id/tv_scenic_details_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:textColor="#8b8d8d"
                android:textSize="12sp"
                tools:text="人均70" />

            <LinearLayout
                android:id="@+id/layout_details_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginStart="90dp"
                android:background="@drawable/layout_bg_red"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_attention"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:src="@mipmap/attention" />

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/tv_attention"
                    android:textColor="#fdffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f8f0"
        android:padding="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/detail_location"/>

        <TextView
            android:id="@+id/tv_scenic_details_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            tools:text="地址：江南大道南坪万达广场新馆2楼B栋5楼23号店美甲旁"
            android:textSize="14sp"
            android:textColor="#868686"
            android:layout_marginStart="7dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="#f1f8f0"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/time"/>

        <TextView
            android:id="@+id/tv_scenic_details_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#868686"
            android:layout_marginLeft="7dp"
            tools:text="营业时间：10:30-13:30, 17:00-21:30"
            android:layout_marginStart="7dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#6a6969"
            android:textSize="14sp"
            android:text="@string/tv_brief_sessions"/>
        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_scenic_details_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f8f0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:textColor="#868686"
        tools:text="胖子爱上了螃蟹——2008年5月浙江海盐，两位胖子为胖子兄弟有了第一次亲密接触..."
        android:paddingStart="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/tv_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#6a6969"
            android:textSize="14sp"
            android:text="@string/tv_details_comment"/>
        <View
            android:layout_width="18dp"
            android:layout_height="1dp"
            android:background="@android:color/black"/>
    </LinearLayout>

</LinearLayout>